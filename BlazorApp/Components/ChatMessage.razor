<div class="textBubble-@(type == "bot" ? "bot" : "user")">
    <div class="content d-flex flex-column">
        @if (mockdata == null)
        {
            <span class="message">
                @Message
            </span>
        } else {
            @for (int i = 0; i < mockdata.GetLength(0); i++)
            {
                <button class="question">@mockdata[i, 0]</button>
            }
        }
    </div>
</div>

@code {
    [Parameter]
    public string Message { get; set; }

    [Parameter]
    public string type { get; set; }

    [Parameter]
    public string[,] mockdata { get; set; }
}