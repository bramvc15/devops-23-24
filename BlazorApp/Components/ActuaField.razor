<div>
    <div class="field grid-container">
        <h2 class="grid-title">@Title</h2>
        <p class="grid-text">@((MarkupString)@Text)</p>
        <a href="/actua-detail/@Id" class="grid-hyper">lees verder</a>
        <img class="grid-image" src="@Image">
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public string Image { get; set; }

    [Parameter]
    public int? Id { get; set; }
}