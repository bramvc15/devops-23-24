<div class="chatbox-div">
    <div class="chatbox-header d-flex" @onclick="() => ToggleChatbox()">
        &#9679
        <div class="title">
            Chat
        </div>
    </div>
    <div class="chatbox-content @(visible ? "visible" : "")">
        <ChatMessage Message="Welkom! Hoe kan ik u helpen?" type="bot" />
        <ChatMessage type="questions" mockdata="mockdata" />
    </div>
</div>


@code {
    public bool visible = false;

    void ToggleChatbox()
    {
        visible = !visible;
    }

    string[,] mockdata = new string[,] {
        {"Hoe kan ik een afspraak maken?", "U kunt een afspraak maken door te bellen naar 06-12345678 of door een mail te sturen naar" },
        {"Ik heb een andere vraag", "" }
    };

}