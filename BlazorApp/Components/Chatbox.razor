<div class="chatbox-div">
    <div class="chatbox-header d-flex" @onclick="() => ToggleChatbox()">
        &#9679
        <div class="title">
            Chat
        </div>
    </div>
    <div class="chatbox-content @(visible ? "visible" : "")">
        <BotMessage Message="Welkom! Hoe kan ik u helpen?" />
        <UserMessage Message="Ik heb een vraag over de website." />
    </div>
</div>


@code {
    public bool visible = false;

    void ToggleChatbox()
    {
        visible = !visible;
    }
}