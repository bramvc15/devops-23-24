@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime
@using System.Text.Json
@using BlazorApp.Data
@using BlazorApp.Services
@using BlazorApp.Models
@using BlazorApp.Controllers
@inject DatabaseContext databaseContext
@using Microsoft.AspNetCore.Components
@inject ChatbotService ChatbotService

<div class="card">
    <div class="card-header" id="headingOne">
    <h5 class="mb-0">
        <button class="btn btn-link" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne" @onclick=this.Collapse>
        @question.Question
        </button>
    </h5>
    </div>
    @if(!collapsed) {
        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
        <div class="card-body">
            @question.Answer
        </div>
        <div class="container">
            @if (followUpQuestions != null)
            {
                foreach (var followUpQuestion in followUpQuestions)
                {
                    <ChatbotAccordion question=followUpQuestion/>
                }
            }
            </div>
        </div>
    }
</div>

@code {
    private bool collapsed = true;

    [Parameter]
    public ChatBotQuestion question { get; set; }

    IEnumerable<ChatBotQuestion>? followUpQuestions;

    protected override async Task OnInitializedAsync()
    {
        followUpQuestions = await Task.Run(() => ChatbotService.GetFollowUpQuestions(question.FollowUpQuestion));
        followUpQuestions = followUpQuestions.Where(x => x.FollowUpID != null);
    }

    void Collapse()
    {
        collapsed = !collapsed;
    }
}