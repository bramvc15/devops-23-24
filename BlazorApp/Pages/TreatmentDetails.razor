@code {
    private bool isCollapsed = false;
    private string imagePath = "";

    protected override void OnInitialized()
    {
        imagePath = "images/" + @naam + ".png";
    }

    private void ToggleCollapse()
    {
        isCollapsed = !isCollapsed;
    }
}