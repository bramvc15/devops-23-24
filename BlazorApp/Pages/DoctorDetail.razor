@page "/docter-info/{DoctorId:int}"
@using BlazorApp.Models
@using BlazorApp.Services
@inject DoctorService doctorService

<PageTitle>Doctor Detail</PageTitle>

<div class="content-container">

    <div class="content-wrapper">
        @if (Doctor != null)
        {
            <div class="imageBackWrapper">
                <div class="exitDoctorDetail">
                    <NavLink class="backArrownav" href="/ons-team">
                        <p class="lastText">
                            <img src="images/BackArrow.png" class="backArrow" alt="icon" data-test-id="doctordetail-back-button" />
                        </p>
                    </NavLink>
                </div>
                <div class="info-Img-wrapper">
                    <img src=@Doctor.Image alt="Doctor Image" class="doctor-image" />
                </div>
            </div>



            <div class="doctor-info">
                <h2>Dokter informatie</h2>
                <ul>
                    <li>Naam: @Doctor.Name</li>
                    <li>Specialisatie: @Doctor.Specialization</li>

                </ul>
                <div id="biography">
                    <h3>Over @Doctor.Name</h3>
                    <p>@Doctor.InfoAbout</p>
                    <h3>Opleiding en Training</h3>
                    <p>@Doctor.InfoEducation</p>
                    <h3>Publicaties en Erkenningen</h3>
                    <p>@Doctor.InfoPublications</p>
                </div>

            </div>
        } else {
                <div class="imageBackWrapper">
                <div class="exitDoctorDetail">
                    <NavLink class="backArrownav" href="/ons-team">
                        <p class="lastText">
                            <img src="images/BackArrow.png" class="backArrow" alt="icon" data-test-id="doctordetail-back-button" />
                        </p>
                    </NavLink>
                </div>
                </div>
            <p>Sorry, deze dokter werd niet gevonden.</p>
        }
    </div>
</div>

@code {
    [Parameter]
    public int DoctorId { get; set; }
    Doctor? Doctor;

    protected override async Task OnInitializedAsync()
    {
        Doctor = await doctorService.GetDoctorById(DoctorId);
    }
}