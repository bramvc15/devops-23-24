@page "/"
@using System.Text.Json
@using BlazorApp.Data
@using BlazorApp.Services
@using BlazorApp.Models
@using BlazorApp.Controllers
@inject HomeHeaderService homeHeaderService
@inject DatabaseContext databaseContext
@using Microsoft.AspNetCore.Components
@inject BlogService blogService

<PageTitle>Vision Oogcentrum</PageTitle>

<div>
    <div class="background-div">
        <div class="overlay">
            @if (HomObj != null)
            {
                @foreach (var h in HomObj)
                {

                    <h1>@h.Title</h1>
                    <p>@((MarkupString)h.Context)</p>
                }
            }
            else
            {

                <h1>title</h1>
                <p>
                    context
                </p>
            }
            <div class="buttons">
                <button data-test-id="home-maakafspraak-button" class="custom-button btn-custom" @onclick="GoToAfspraakPage">Maak een afspraak <span class="oi oi-calendar"></span></button>
                <button data-test-id="home-contacteerons-button" class="custom-button btn-custom" @onclick="GoToContactPage">Contacteer ons <span
                        class="oi oi-envelope-closed"></span></button>
            </div>
        </div>
    </div>
</div>

<div>



    <div class="actuaBox">
        @if (BlogObj.blogs != null)
        {
            foreach (var b in BlogObj.blogs)
            {
                <ActuaField Title=@b.Title Text=@b.Text Image=@b.Image Id=@b.Id />
            }
        }
        <nav>
            <ul class="pagination">
                <li class="page-item @(currentPage == 1 ? "disabled d-none" : "")">
                    <a class="page-link" @onclick="(() => ChangePage(currentPage - 1))">Vorige</a>
                </li>
                @for (int i = 1; i <= BlogObj.totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" @onclick="(() => ChangePage(i))">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage == BlogObj.totalPages ? "disabled d-none" : "")">
                    <a class="page-link" @onclick="(() => ChangePage(currentPage + 1))">Volgende</a>
                </li>
            </ul>
        </nav>
    </div>

</div>


@code {
    @inject NavigationManager NavigationManager
    
    IEnumerable<HomeHeader>? HomObj;
    (IEnumerable<Blog> blogs, int totalPages) BlogObj;
    int currentPage = 1;

    protected override async Task OnInitializedAsync()
    {
        HomObj = await homeHeaderService.GetContent();
        BlogObj = await blogService.GetContent(currentPage, 5);
    }

    private async Task ChangePage(int page)
    {
        if (page < 1 || page > BlogObj.totalPages)
        {
            return;
        }

        currentPage = page;
        BlogObj = await blogService.GetContent(currentPage, 5);
        StateHasChanged();
    }
    
    private void GoToAfspraakPage() {
        NavigationManager.NavigateTo("/afspraak");
    }

    private void GoToContactPage() {
        NavigationManager.NavigateTo("/contact");
    }
}