@page "/ons-team"
@    using BlazorApp.Data
@    using BlazorApp.Models
@    using BlazorApp.Services
@    using BlazorApp.Controllers
@inject DoctorService doctorService

<PageTitle>Ons Team</PageTitle>

<div class="page-container">
    <div class="title-layout">
        <h1>Ons team</h1>
        <span class="breadcrumbs">
            <a data-test-id="team-home-breadcrumb" href="/"><u>Home</u></a> > Ons team
        </span>
    </div>

    <div class="container mt-4">
        <div class="row ">
            @* <div class="col-md-6 col-lg-4">
            <TeamCard ImageSrc="images/schermer.jpg" Name="Dokter 2" />
            </div>
            <div class="col-md-6 col-lg-4">
            <TeamCard ImageSrc="images/schermer.jpg" Name="Dokter 3" />
            </div> *@
            @if (DocObj != null)
            {
                @foreach (var doc in DocObj)
                {

                    <div class="col-md-6 col-lg-4">
                        @if (doc != null)
                        {
                            <TeamCard ImageSrc=@doc.Image Name=@doc.Name Specialization="@doc.Specialization" DoctorId=@doc.Id />
                        }
                    </div>
                }


            }
            else
            {
                <p>DocObj is null.</p>
            }

        </div>
    </div>
</div>

@code {
    IEnumerable<Doctor>? DocObj;

    protected override async Task OnInitializedAsync()
    {
        DocObj = await doctorService.GetAll();
    }
}
