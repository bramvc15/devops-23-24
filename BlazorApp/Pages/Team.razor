@page "/ons-team"
@using BlazorApp.Data
@using BlazorApp.Models
@using BlazorApp.Services.Core
@using BlazorApp.Controllers
@using BlazorApp.BlazorShared
@using Shared
@inject DoctorService doctorService

<PageTitle>Ons Team</PageTitle>

<div class="page-container">
    <div class="title-layout">
        <h1>Ons team</h1>
        <span class="breadcrumbs">
            <a data-test-id="team-home-breadcrumb" href="/"><u>Home</u></a> > Ons team
        </span>
    </div>

    <div class="container mt-4">
        <div class="row ">
            @if (DocObj != null)
            {
                @foreach (var doc in DocObj)
                {

                    <div class="col-md-6 col-lg-4">
                        @if (doc != null)
                        {
                            <TeamCard ImageSrc=@doc.ImageLink Name=@doc.Name Specialization="@doc.Specialization" DoctorId=@doc.Id />
                        }
                    </div>
                }


            }
            else
            {
                <p>DocObj is null.</p>
            }

        </div>
    </div>
</div>

@code {
    IEnumerable<DoctorDTO>? DocObj;

    protected override async Task OnInitializedAsync()
    {
        DocObj = await doctorService.GetDoctors();
    }
}
